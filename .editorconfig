[*]
charset = utf-8
end_of_line = crlf
indent_size = 2
indent_style = space
insert_final_newline = false
max_line_length = 400
tab_width = 2
trim_trailing_whitespace = false
ij_continuation_indent_size = 8
ij_formatter_off_tag = @formatter:off
ij_formatter_on_tag = @formatter:on
ij_formatter_tags_enabled = false
ij_smart_tabs = false
ij_visual_guides = none
ij_wrap_on_typing = false

# Microsoft .NET properties
csharp_indent_braces = false
csharp_new_line_before_open_brace = none

# ReSharper properties
resharper_cpp_indent_size = 2
resharper_cpp_tab_width = 2
resharper_csharp_indent_size = 2
resharper_csharp_tab_width = 2
resharper_html_indent_size = 2
resharper_html_tab_width = 2
resharper_resx_indent_size = 2
resharper_resx_tab_width = 2
resharper_shaderlab_indent_size = 2
resharper_shaderlab_tab_width = 2
resharper_vb_indent_size = 2
resharper_vb_tab_width = 2
resharper_xmldoc_indent_size = 2
resharper_xmldoc_tab_width = 2
resharper_xml_indent_size = 2
resharper_xml_tab_width = 2

[*.cs]
indent_size = 2
tab_width = 2
indent_style = space

[*.properties]
ij_properties_align_group_field_declarations = false
ij_properties_keep_blank_lines = false
ij_properties_key_value_delimiter = equals
ij_properties_spaces_around_key_value_delimiter = false

[.editorconfig]
ij_editorconfig_align_group_field_declarations = false
ij_editorconfig_space_after_colon = false
ij_editorconfig_space_after_comma = true
ij_editorconfig_space_before_colon = false
ij_editorconfig_space_before_comma = false
ij_editorconfig_spaces_around_assignment_operators = true

[{*.har,*.inputactions,*.json}]
tab_width = 4
ij_json_keep_blank_lines_in_code = 0
ij_json_keep_indents_on_empty_lines = false
ij_json_keep_line_breaks = true
ij_json_space_after_colon = true
ij_json_space_after_comma = true
ij_json_space_before_colon = true
ij_json_space_before_comma = false
ij_json_spaces_within_braces = false
ij_json_spaces_within_brackets = false
ij_json_wrap_long_lines = false
